<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'CONTACT',
        href: '#',
        target: '_blank',
        icon: 'tabler:brand-whatsapp',
      },
    ]}
